# AI-Powered Knowledge Graph Builder - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default) - for development and testing
DATABASE_URL=sqlite:///./knowledge_graph.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/kg_database

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Directory where uploaded files will be stored
UPLOAD_DIR=uploads

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Choose between Ollama (local) or OpenAI (cloud)
# Set USE_OLLAMA=true for local Ollama, false for OpenAI
USE_OLLAMA=true

# =============================================================================
# OLLAMA CONFIGURATION (Local LLM)
# =============================================================================
# Base URL for Ollama API (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Model to use for extraction (options: tinyllama, phi, llama3.2, llama3.1, etc.)
OLLAMA_MODEL=tinyllama

# Timeout for Ollama requests in seconds (default: 120)
OLLAMA_TIMEOUT=120

# =============================================================================
# OPENAI CONFIGURATION (Cloud LLM)
# =============================================================================
# Set to true to use OpenAI instead of Ollama
USE_OPENAI=false

# Your OpenAI API key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model to use (options: gpt-3.5-turbo, gpt-4, gpt-4-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name
APP_NAME=Knowledge Graph Builder

# Debug mode (true for development, false for production)
DEBUG=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.csv

# Maximum filename length
MAX_FILENAME_LENGTH=255

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool size
DB_POOL_SIZE=10

# Maximum database connections
DB_MAX_OVERFLOW=20

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console logging)
LOG_FILE=

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development with Ollama:
# USE_OLLAMA=true
# OLLAMA_MODEL=tinyllama
# DEBUG=true

# For production with OpenAI:
# USE_OLLAMA=false
# USE_OPENAI=true
# OPENAI_API_KEY=sk-your-actual-key
# OPENAI_MODEL=gpt-3.5-turbo
# DEBUG=false

# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:pass@localhost:5432/kg_prod
# DEBUG=false